                    emptyDiv.className = 'col-12 text-center py-5';
                    emptyDiv.innerHTML = `
                        <div style="background: rgba(35, 36, 42, 0.6); border: 1px solid rgba(120,130,150,.1); border-radius: 16px; padding: 3rem 2rem; max-width: 500px; margin: 0 auto;">
                            <i class="bi bi-search" style="font-size: 3rem; color: #3BB7FB; opacity: 0.6; margin-bottom: 1.5rem;"></i>
                            <h5 style="color: #fff; font-weight: 600; margin-bottom: 1rem;">No books found</h5>
                            <p style="color: #b0b3b8; font-size: 0.95rem; margin-bottom: 0;">
                                No books match "<strong>${searchTerm}</strong>". Try a different search term.
                            </p>
                        </div>
                    `;
                    document.querySelector('.wishlist-grid-container .row').appendChild(emptyDiv);
                } else {
                    emptySearchState.querySelector('p').innerHTML = `No books match "<strong>${searchTerm}</strong>". Try a different search term.`;
                    emptySearchState.style.display = 'block';
                }
            } else if (emptySearchState) {
                emptySearchState.style.display = 'none';
            }
        });

        // Enhanced remove from wishlist with professional confirmation
        let bookToRemove = null;
        
        function removeFromWishlist(bookId) {
            // Find the book title for confirmation - works with both layouts
            const bookCard = event.target.closest('.col-6, .col-sm-6, .col-md-4, .col-lg-3, .col-xl-2');
            const bookTitle = bookCard.querySelector('.book-title-professional, h6')?.textContent || 'this book';
            
            // Set the book title in the confirmation modal
            document.getElementById('book-title-confirm').textContent = bookTitle;
            
            // Store the book ID for removal
            bookToRemove = { id: bookId, element: bookCard };
            
            // Show confirmation modal
            $('#confirmRemovalModal').modal('show');
        }
        
        // Handle confirmed removal with enhanced animation
        document.getElementById('confirm-remove-btn').addEventListener('click', async function() {
            if (!bookToRemove) return;
            
            try {
                const response = await fetch(`/wishlist/remove/${bookToRemove.id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    // Enhanced removal animation
                    bookToRemove.element.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
                    bookToRemove.element.style.transform = 'scale(0.8) translateY(-20px)';
                    bookToRemove.element.style.opacity = '0';
                    
                    setTimeout(() => {
                        bookToRemove.element.remove();
                        
                        // Check if wishlist is empty and update layout
                        const remainingItems = document.querySelectorAll('.wishlist-grid-container .col-6, .wishlist-grid-container .col-sm-6, .wishlist-grid-container .col-md-4, .wishlist-grid-container .col-lg-3, .wishlist-grid-container .col-xl-2');
                        if (remainingItems.length === 0) {
                            // Smooth transition to empty state
                            setTimeout(() => {
                                location.reload(); // Reload to show empty state
                            }, 200);
                        } else {
                            // Update the book count in header if it exists
                            const bookCountBadge = document.querySelector('.title-badge .badge');
                            if (bookCountBadge) {
                                const currentCount = parseInt(bookCountBadge.textContent.split(' ')[0]);
                                bookCountBadge.textContent = `${currentCount - 1} Books`;
                            }
                        }
                    }, 400);
                    
                    showSuccessToast('Book removed from wishlist successfully!');
                } else {
                    showSuccessToast(result.error || result.message || 'Failed to remove book', 'error');
                }
                
                // Hide modal
                $('#confirmRemovalModal').modal('hide');
                bookToRemove = null;
                
            } catch (error) {
                console.error('Error removing from wishlist:', error);
                showSuccessToast('Failed to remove book from wishlist', 'error');
                $('#confirmRemovalModal').modal('hide');
                bookToRemove = null;
            }
        });
    </script>
    

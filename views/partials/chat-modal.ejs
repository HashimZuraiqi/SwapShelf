<!-- Professional Card-Style Chat Modal Styles -->
<style>
/* Chat Modal Overlay */
.chat-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.chat-modal.show {
    display: flex;
    opacity: 1;
    align-items: center;
    justify-content: center;
}

.chat-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(5px);
}

/* Chat Modal Card */
.chat-modal-card {
    position: relative;
    width: 90%;
    max-width: 1000px;
    height: 85vh;
    max-height: 700px;
    background: linear-gradient(135deg, #1E1E1E 0%, #2A2D35 100%);
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(59, 183, 251, 0.2);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transform: scale(0.9);
    transition: transform 0.3s ease;
}

.chat-modal.show .chat-modal-card {
    transform: scale(1);
}

/* Chat Card Header */
.chat-card-header {
    background: linear-gradient(135deg, rgba(59, 183, 251, 0.1), rgba(102, 126, 234, 0.1));
    padding: 20px 24px;
    border-bottom: 1px solid rgba(59, 183, 251, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100px;
    position: relative;
}

.chat-brand-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    text-align: center;
}

.chat-brand-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
    align-items: center;
    text-align: center;
}

.chat-brand-logo {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, #3BB7FB, #667eea);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(59, 183, 251, 0.3);
    flex-shrink: 0;
}

.chat-brand-logo i {
    font-size: 1.5rem !important;
    color: #ffffff;
}

.chat-brand-title {
    font-size: 22px;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
    line-height: 1.2;
}

.chat-brand-subtitle {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    line-height: 1.2;
}

.chat-close-btn {
    position: absolute;
    right: 24px;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: #ffffff;
    font-size: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.chat-close-btn:hover {
    background: rgba(220, 53, 69, 0.2);
    border-color: #dc3545;
    transform: translateY(-50%) rotate(90deg);
}

/* Main Content Area */
.chat-card-content {
    flex: 1;
    display: flex;
    overflow: hidden;
}

/* Conversations Panel */
.chat-panel {
    width: 100%;
    display: flex;
    flex-direction: column;
    background: rgba(30, 30, 30, 0.5);
}

.chat-panel.active {
    display: flex;
}

.panel-header {
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.search-container {
    width: 100%;
}

.search-input-wrapper {
    position: relative;
    width: 100%;
}

.search-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.4);
    font-size: 16px;
    pointer-events: none;
}

.search-input {
    width: 100%;
    padding: 12px 16px 12px 48px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: #ffffff;
    font-size: 14px;
    transition: all 0.3s ease;
}

.search-input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.08);
    border-color: #3BB7FB;
    box-shadow: 0 0 0 3px rgba(59, 183, 251, 0.1);
}

.search-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
}

/* Conversations List */
.conversations-list-container {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.conversations-list {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
}

.conversations-list::-webkit-scrollbar {
    width: 6px;
}

.conversations-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
}

.conversations-list::-webkit-scrollbar-thumb {
    background: rgba(59, 183, 251, 0.3);
    border-radius: 3px;
}

.conversations-list::-webkit-scrollbar-thumb:hover {
    background: rgba(59, 183, 251, 0.5);
}

/* Loading State */
.loading-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    color: rgba(255, 255, 255, 0.6);
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(59, 183, 251, 0.2);
    border-top-color: #3BB7FB;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 16px;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-state p {
    margin: 0;
    font-size: 14px;
}

/* Empty State */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
}

.empty-state i {
    font-size: 48px;
    color: rgba(59, 183, 251, 0.3);
    margin-bottom: 16px;
}

.empty-state p {
    margin: 0;
    font-size: 14px;
    max-width: 300px;
}

/* Pagination */
.pagination-container {
    padding: 16px 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(0, 0, 0, 0.2);
}

.pagination-info {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 12px;
    text-align: center;
}

.pagination-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.pagination-btn {
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #ffffff;
    font-size: 13px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
}

.pagination-btn:hover:not(:disabled) {
    background: rgba(59, 183, 251, 0.1);
    border-color: #3BB7FB;
}

.pagination-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
}

.pagination-numbers {
    display: flex;
    gap: 4px;
}

/* Chat View */
.chat-view {
    width: 100%;
    display: none;
    flex-direction: column;
}

.chat-view-header {
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    gap: 16px;
    background: rgba(0, 0, 0, 0.2);
}

.back-btn {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.back-btn:hover {
    background: rgba(59, 183, 251, 0.1);
    border-color: #3BB7FB;
}

.chat-contact-info {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 12px;
}

.contact-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    border: 2px solid #3BB7FB;
    object-fit: cover;
}

.contact-details h3 {
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 4px 0;
}

.contact-status {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
}

.chat-actions {
    display: flex;
    gap: 8px;
}

.action-btn {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.action-btn:hover {
    background: rgba(59, 183, 251, 0.1);
    border-color: #3BB7FB;
}

/* Messages Container */
.messages-container {
    flex: 1;
    overflow-y: auto;
    padding: 24px;
    background: rgba(30, 30, 30, 0.5);
}

.messages-container::-webkit-scrollbar {
    width: 6px;
}

.messages-container::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
}

.messages-container::-webkit-scrollbar-thumb {
    background: rgba(59, 183, 251, 0.3);
    border-radius: 3px;
}

.welcome-message {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 60px 20px;
    color: rgba(255, 255, 255, 0.6);
}

.welcome-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #3BB7FB, #667eea);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
}

.welcome-icon i {
    font-size: 36px;
    color: #ffffff;
}

.welcome-message h3 {
    font-size: 22px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 12px 0;
}

.welcome-message p {
    font-size: 14px;
    max-width: 400px;
    margin: 0;
}

/* Message Input */
.message-input-container {
    padding: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(0, 0, 0, 0.2);
}

.message-input-wrapper {
    display: flex;
    align-items: flex-end;
    gap: 12px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 12px;
    transition: all 0.3s ease;
}

.message-input-wrapper:focus-within {
    border-color: #3BB7FB;
    box-shadow: 0 0 0 3px rgba(59, 183, 251, 0.1);
}

.attach-btn,
.emoji-btn {
    width: 36px;
    height: 36px;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    flex-shrink: 0;
}

.attach-btn:hover,
.emoji-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #3BB7FB;
}

.message-input {
    flex: 1;
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 14px;
    resize: none;
    max-height: 120px;
    min-height: 24px;
    line-height: 24px;
    padding: 0;
}

.message-input:focus {
    outline: none;
}

.message-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
}

.send-btn {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #3BB7FB, #667eea);
    border: none;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    flex-shrink: 0;
}

.send-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(59, 183, 251, 0.4);
}

.send-btn:active {
    transform: scale(0.95);
}

/* Responsive Design */
@media (max-width: 768px) {
    .chat-modal-card {
        width: 95%;
        height: 95vh;
        border-radius: 15px;
    }
    
    .chat-card-header {
        padding: 16px 20px;
        min-height: 90px;
    }
    
    .chat-brand-header {
        gap: 6px;
    }
    
    .chat-brand-title {
        font-size: 20px;
    }
    
    .chat-brand-subtitle {
        font-size: 12px;
    }
    
    .chat-brand-logo {
        width: 45px;
        height: 45px;
    }
    
    .chat-brand-logo i {
        font-size: 1.5rem !important;
    }
    
    .chat-close-btn {
        width: 36px;
        height: 36px;
        font-size: 18px;
        right: 20px;
    }
    
    .chat-actions {
        display: none;
    }
}
</style>


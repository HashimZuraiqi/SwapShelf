  <div class="register-container">
    <div class="register-card">
      <div class="brand-header">
        <div class="brand-logo">
          <svg width="32" height="32" viewBox="0 0 56 56" fill="none">
            <g>
              <rect x="17" y="20" width="10" height="16" rx="2" fill="#ffffff"/>
              <rect x="29" y="20" width="10" height="16" rx="2" fill="#ffffff"/>
              <line x1="27.5" y1="20" x2="27.5" y2="36" stroke="#3BB7FB" stroke-width="1.5"/>
            </g>
          </svg>
        </div>
        <h1 class="brand-title">Create Account</h1>
        <p class="brand-subtitle">Join BookSwap and start trading books today</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <i class="bi bi-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>

      <form id="registerForm" action="/auth/register" method="post" novalidate>
        <div class="form-group">
          <label for="name" class="form-label">Full Name</label>
          <div class="input-container">
            <i class="input-icon bi bi-person"></i>
            <input id="name" name="name" type="text" class="form-control" 
                   placeholder="Enter your full name" value="<%= name %>" required>
          </div>
        </div>

        <!-- Username (added) -->
        <div class="form-group">
          <label for="username" class="form-label">Username</label>
          <div class="input-container">
            <i class="input-icon bi bi-at"></i>
            <input id="username" name="username" type="text" class="form-control"
                   placeholder="Choose a unique username"
                   value="<%= typeof username !== 'undefined' ? username : '' %>"
                   autocomplete="username"
                   required>
          </div>
          <!-- live status line for username -->
          <div id="username-status" class="field-status"></div>
        </div>
        <!-- /Username -->

        <div class="form-group">
          <label for="email" class="form-label">Email Address</label>
          <div class="input-container">
            <i class="input-icon bi bi-envelope"></i>
            <input id="email" name="email" type="email" class="form-control" 
                   placeholder="Enter your email address" value="<%= email %>" required>
          </div>
        </div>

        <div class="form-group">
          <label for="location" class="form-label">Location</label>
          <div class="input-container">
            <i class="input-icon bi bi-geo-alt"></i>
            <input id="location" name="location" type="text" class="form-control" 
                   placeholder="Enter your country" autocomplete="off" required>
          </div>
          <ul id="country-list"></ul>
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <div class="input-container">
            <i class="input-icon bi bi-lock"></i>
            <input id="password" name="password" type="password" class="form-control" 
                   placeholder="Create a strong password" required>
            <button class="toggle-pass" type="button" data-target="#password">
              <i class="bi bi-eye"></i>
            </button>
          </div>
          <div id="passwordHelp" class="password-requirements">
            <div class="requirements-title">Password must include:</div>
            <ul class="requirement-list">
              <li class="requirement-item" id="req-length">
                <i class="requirement-icon bi bi-dot"></i>
                At least 6 characters
              </li>
              <li class="requirement-item" id="req-upper">
                <i class="requirement-icon bi bi-dot"></i>
                One uppercase letter (A–Z)
              </li>
              <li class="requirement-item" id="req-number">
                <i class="requirement-icon bi bi-dot"></i>
                One number (0–9)
              </li>
              <li class="requirement-item" id="req-symbol">
                <i class="requirement-icon bi bi-dot"></i>
                One symbol (e.g. @ ! $ # % ^ & * ?)
              </li>
            </ul>
          </div>
        </div>

        <div class="form-group">
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <div class="input-container">
            <i class="input-icon bi bi-lock"></i>
            <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" 
                   placeholder="Re-enter your password" required>
            <button class="toggle-pass" type="button" data-target="#confirmPassword">
              <i class="bi bi-eye"></i>
            </button>
          </div>
          <div id="confirmFeedback" class="field-status"></div>
        </div>

        <button type="submit" class="btn btn-primary">Create Account</button>
      </form>

      <div class="form-footer">
        <p>Already have an account? <a href="/login">Sign in here</a></p>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"></script>

  <script>
    (function() {
      const input = document.getElementById('location');
      const list = document.getElementById('country-list');
      
      function hideList() {
        list.style.display = 'none';
        list.innerHTML = '';
      }

      input.addEventListener('input', function() {
        const query = this.value.trim();
        if (query.length < 2) return hideList();
        
        fetch(`https://restcountries.com/v3.1/name/${encodeURIComponent(query)}`)
          .then(r => r.json())
          .then(data => {
            if (!Array.isArray(data)) return hideList();
            
            list.innerHTML = data.slice(0, 8).map(country => {
              const name = country?.name?.common || '';
              const safeName = String(name).replace(/'/g, "\\'");
              return `<li onmousedown="document.getElementById('location').value='${safeName}'; hideList();">${name}</li>`;
            }).join('');
            list.style.display = 'block';
          })
          .catch(hideList);
      });

      document.addEventListener('click', e => {
        if (!input.contains(e.target) && !list.contains(e.target)) hideList();
      });

      window.hideList = hideList;
    })();

    (function() {
      const form = document.getElementById('registerForm');
      const pwd = document.getElementById('password');
      const cpwd = document.getElementById('confirmPassword');
      const help = document.getElementById('passwordHelp');
      const confirmFeedback = document.getElementById('confirmFeedback');

      const requirements = {
        length: document.getElementById('req-length'),
        upper: document.getElementById('req-upper'),
        number: document.getElementById('req-number'),
        symbol: document.getElementById('req-symbol')
      };

      let submitAttempted = false;

      const tests = {
        length: v => v.length >= 6,
        upper: v => /[A-Z]/.test(v),
        number: v => /\d/.test(v),
        symbol: v => /[@!$#%^&*?~_\-+.,;:()[\]{}\\/|`]/.test(v)
      };

      function updateRequirement(element, isValid) {
        const icon = element.querySelector('.requirement-icon');
        element.classList.remove('valid', 'invalid');
        
        if (isValid) {
          element.classList.add('valid');
          icon.className = 'requirement-icon bi bi-check-circle';
        } else if (submitAttempted) {
          element.classList.add('invalid');
          icon.className = 'requirement-icon bi bi-x-circle';
        } else {
          icon.className = 'requirement-icon bi bi-dot';
        }
      }

      function validatePassword() {
        const value = pwd.value || '';
        const results = {
          length: tests.length(value),
          upper: tests.upper(value),
          number: tests.number(value),
          symbol: tests.symbol(value)
        };

        Object.keys(results).forEach(key => {
          updateRequirement(requirements[key], results[key]);
        });

        const isValid = Object.values(results).every(Boolean);
        
        if (submitAttempted) {
          pwd.style.borderColor = isValid ? '#10B981' : '#EF4444';
        }
        
        return isValid;
      }

      function validateConfirmPassword() {
        const isMatch = pwd.value && cpwd.value && pwd.value === cpwd.value;
        
        if (cpwd.value.length) {
          confirmFeedback.textContent = isMatch ? 'Passwords match' : 'Passwords do not match';
          confirmFeedback.className = `field-status ${isMatch ? 'valid' : 'invalid'}`;
        } else {
          confirmFeedback.textContent = '';
          confirmFeedback.className = 'field-status';
        }

        if (submitAttempted) {
          cpwd.style.borderColor = isMatch ? '#10B981' : '#EF4444';
        }
        
        return isMatch;
      }

      pwd.addEventListener('focus', () => {
        help.classList.add('show');
      });

      pwd.addEventListener('blur', () => {
        if (!pwd.value.length) help.classList.remove('show');
      });

      pwd.addEventListener('input', () => {
        validatePassword();
        if (cpwd.value) validateConfirmPassword();
      });

      cpwd.addEventListener('input', validateConfirmPassword);

      document.querySelectorAll('.toggle-pass').forEach(btn => {
        btn.addEventListener('click', () => {
          const target = document.querySelector(btn.getAttribute('data-target'));
          const icon = btn.querySelector('i');
          
          if (target.type === 'password') {
            target.type = 'text';
            icon.className = 'bi bi-eye-slash';
          } else {
            target.type = 'password';
            icon.className = 'bi bi-eye';
          }
          target.focus();
        });
      });

      form.addEventListener('submit', e => {
        submitAttempted = true;
        const passwordValid = validatePassword();
        const confirmValid = validateConfirmPassword();
        
        if (!passwordValid || !confirmValid) {
          e.preventDefault();
          const firstInvalid = passwordValid ? cpwd : pwd;
          firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
          firstInvalid.focus();
        }
      });
    })();
  </script>
  <!-- username live checker -->
  <script src="/js/username-checker.js"></script>
</body>
</html>

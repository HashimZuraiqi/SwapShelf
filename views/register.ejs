<div class="welcome-section">
  <h2 class="welcome-title">Join BookSwap</h2>
  <p class="welcome-desc">Create your account and start swapping books today</p>            
</div>

            <!-- Error Message Display -->
            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <form action="/auth/register" method="post">
                <!-- Full Name -->
                <div class="form-group input-icon">
                    <label for="name" class="form-label">Full Name</label>
                    <span class="input-icon-left"><i class="fa-regular fa-user fa-lg"></i></span>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter your full name" value="<%= name %>" required />
                </div>
                <!-- Email -->
                <div class="form-group input-icon">
                    <label for="email" class="form-label">Email Address</label>
                    <span class="input-icon-left"><i class="fa-regular fa-envelope fa-lg"></i></span>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" value="<%= email %>" required />
                </div>
                <!-- Location -->
                <div class="form-group input-icon">
                    <label for="location" class="form-label">Location</label>
                    <span class="input-icon-left"><i class="fa-solid fa-location-dot"></i></span>
                    <input type="text" name="location" id="location" class="form-control" placeholder="Country" required />
                                        <ul id="country-list" style="position:absolute;z-index:1000;list-style:none;
                                        padding-left:0;margin-top:2px;width:100%;background:#23242a;border-radius:8px;
                                        box-shadow:0 2px 8px rgba(0,0,0,0.08);">
                                        </ul>
                </div>
                <script>
document.addEventListener('DOMContentLoaded', function() {
    const input = document.getElementById('location');
    const list = document.getElementById('country-list');
    input.addEventListener('input', function() {
        const query = this.value.trim();
        if (query.length < 2) {
            list.innerHTML = '';
            return;
        }
        fetch('https://restcountries.com/v3.1/name/' + encodeURIComponent(query))
            .then(response => response.json())
            .then(data => {
                if (!Array.isArray(data)) {
                    list.innerHTML = '';
                    return;
                }
                let html = '';
                data.forEach(country => {
                    html += `<li style="padding:8px 16px;cursor:pointer;" onmousedown="document.getElementById('location').value='${country.name.common}';document.getElementById('country-list').innerHTML='';">${country.name.common}</li>`;
                });
                list.innerHTML = html;
            })
            .catch(() => {
                list.innerHTML = '';
            });
    });
    // Hide list when clicking outside
    document.addEventListener('click', function(e) {
        if (!input.contains(e.target) && !list.contains(e.target)) {
            list.innerHTML = '';
        }
    });
});
</script>
                <!-- Password -->
                <div class="form-group input-icon">
                    <label for="password" class="form-label">Password</label>
                    <span class="input-icon-left"><i class="bi bi-lock"></i></span>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required />
                </div>
                <!-- Confirm Password -->
                <div class="form-group input-icon">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <span class="input-icon-left"><i class="bi bi-lock"></i></span>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm your password" required />
                </div>
                <!-- Create Account Button -->
                <button type="submit" class="btn btn-gradient w-100 create-account-btn">Create Account</button>
                <!-- Already have an account -->

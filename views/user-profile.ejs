<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profileUser.fullname || profileUser.username %> | BookSwap</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Navbar Chat System CSS -->
    <link rel="stylesheet" href="/css/navbar-chat.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,600,400&display=swap" rel="stylesheet">
    <style>
        .profile-header {
            background: linear-gradient(135deg, #1a1b21 0%, #23242a 50%, #1e1f24 100%);
            border: 1px solid rgba(59, 183, 251, 0.1);
            border-radius: 20px;
            padding: 3rem 2rem;
            margin: 1.5rem;
            color: white;
        }
        
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid rgba(59, 183, 251, 0.3);
            margin-bottom: 1rem;
        }
        
        .user-stats {
            display: flex;
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .stat-item {
            text-align: center;
            background: rgba(59, 183, 251, 0.1);
            padding: 1rem;
            border-radius: 10px;
            flex: 1;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #3BB7FB;
        }
        
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.5rem;
            padding: 2rem;
        }
        
        .book-card {
            background: #1E1E1E;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .book-card:hover {
            transform: translateY(-5px);
        }
        
        .book-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }
        
        .book-info {
            padding: 1rem;
            color: white;
        }
        
        .book-title {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        
        .book-author {
            color: #888;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <!-- Include Standard Navbar -->
    <%- include('partials/navbar') %>

    <!-- Include Navbar Chat Component -->
    <%- include('partials/navbar-chat') %>

    <!-- Main Content -->
    <main class="container-fluid">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row">
                <div class="col-md-8 mx-auto text-center">
                    <img src="<%= profileUser.profileImage || '/images/default-avatar.png' %>" 
                         alt="<%= profileUser.fullname || profileUser.username %>" 
                         class="profile-avatar"
                         onerror="this.src='/images/default-avatar.png'">
                    
                    <h1><%= profileUser.fullname || profileUser.username %></h1>
                    <p class="text-muted">@<%= profileUser.username %></p>
                    <p class="text-muted">
                        <i class="bi bi-calendar"></i> 
                        Joined <%= new Date(profileUser.createdAt).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %>
                    </p>
                    
                    <div class="user-stats">
                        <div class="stat-item">
                            <div class="stat-number"><%= booksCount %></div>
                            <div>Books</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">0</div>
                            <div>Swaps</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">5.0</div>
                            <div>Rating</div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <button class="btn btn-primary" id="startChatBtn" 
                                data-user-id="<%= profileUser._id %>" 
                                data-user-name="<%= profileUser.fullname || profileUser.username %>" 
                                data-user-avatar="<%= profileUser.profileImage || '/images/default-avatar.png' %>">
                            <i class="bi bi-chat-dots"></i> Send Message
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- User's Books -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-white text-center mb-4">
                        <i class="bi bi-book"></i> 
                        <%= profileUser.fullname || profileUser.username %>'s Books
                    </h2>
                    
                    <% if (books.length === 0) { %>
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-book" style="font-size: 4rem; margin-bottom: 1rem;"></i>
                            <h4>No books yet</h4>
                            <p>This user hasn't added any books to their library.</p>
                        </div>
                    <% } else { %>
                        <div class="books-grid">
                            <% books.forEach(book => { %>
                                <div class="book-card">
                                    <img src="<%= book.imageUrl || '/images/placeholder-book.jpg' %>" 
                                         alt="<%= book.title %>" 
                                         class="book-image"
                                         onerror="this.src='/images/placeholder-book.jpg'">
                                    <div class="book-info">
                                        <div class="book-title"><%= book.title %></div>
                                        <div class="book-author">by <%= book.author %></div>
                                        <% if (book.genre) { %>
                                            <div class="text-muted mt-2">
                                                <small><i class="bi bi-tag"></i> <%= book.genre %></small>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Include Navbar Chat System -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/navbar-chat.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const startChatBtn = document.getElementById('startChatBtn');
            if (startChatBtn) {
                startChatBtn.addEventListener('click', function() {
                    const userId = this.dataset.userId;
                    const userName = this.dataset.userName;
                    const userAvatar = this.dataset.userAvatar;
                    
                    // Open chat and start conversation
                    if (window.instagramChat) {
                        window.instagramChat.openChat();
                        setTimeout(() => {
                            window.instagramChat.startConversation(userId, userName, userAvatar);
                        }, 300);
                    }
                });
            }
        });
    </script>
</body>
</html>
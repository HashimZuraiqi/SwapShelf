        .done(function() {
            showSuccessMessage('Swap request accepted!');
            setTimeout(() => location.reload(), 1500);
        })
        .fail(function(xhr) {
            showErrorMessage('Failed to accept swap: ' + (xhr.responseJSON?.message || 'Unknown error'));
